.hmly-ification {
	width: 100%;
	height: 100%;
	background: linear-gradient(to bottom, rgb(243, 244, 246), #ffffff); /* 渐变背景 */
	display: flex;
	justify-content: flex-start; /* 左对齐 */
}

.hmly-scroll-right {
	width: 100%; /* 右侧滚动视图占满全宽 */
	padding: 20rpx; /* 内边距 */
}

.hmly-content-scroll-item {
	width: 100%; /* 内容项宽度100% */
	height: auto;
	margin-bottom: 10rpx;
}

.hmly-top {
	width: 100%;
	height: 40rpx;
	padding: 10rpx 0;
	display: flex;
	justify-content: space-between; /* 标题和“更多”文本分开对齐 */
	align-items: center;
	background: rgba(255, 255, 255, 0.8); /* 半透明背景 */
	box-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.1); /* 微弱阴影效果 */
}

.hmly-top-title {
  margin-left: 12px;
  font-size: 30rpx; /* 与左边标题大小一致 */
  font-weight: bold
}

.hmly-top-more {
  margin-right:12px;
	font-size: 26rpx; /* 与左边标题大小一致 */
	color: #333; /* 文字颜色 */
	cursor: pointer; /* 鼠标指针效果 */
}

.hmly-content {
	width: 100%;
	padding: 30rpx 0rpx;
	display: flex;
	flex-direction: row;
	flex-wrap: wrap;
	align-content: flex-start; /* 对齐到顶部 */
	justify-content: flex-start; /* 左对齐 */
	background-color: #fff;
	border-top-left-radius: 7rpx;
	border-bottom-left-radius: 7rpx;
	box-shadow: 0 2rpx 5rpx rgba(0, 0, 0, 0.1); /* 阴影效果 */
}

.hmly-content-text {
	width: 130rpx;
	height: auto; /* 高度自适应 */
	margin: 10rpx 20rpx;
	font-size: 24rpx;
	text-align: center;
	background: #f0f0f0; /* 灰色背景 */
	border-radius: 5rpx; /* 圆角 */
	display: flex;
	justify-content: center; /* 居中对齐 */
	align-items: center; /* 垂直居中 */
	padding: 10rpx; /* 内边距 */
	box-sizing: border-box; /* 包含内边距 */
}